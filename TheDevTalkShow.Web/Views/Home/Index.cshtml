@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card-horizontal {
        display: flex;
        flex: 1 1 auto;
    }
</style>
<div class="container" style="margin-bottom:75px;">
    <div class="text-center">
        <h1 class="display-3">The Dev Talk Show!</h1>
        <h3>Developers doing what developers do, recorded during a live stream.</h3>
    </div>
    <div class="row">
        <div class="col-md-5">
            <img src="~/img/TheDevTalkShow 488a99-trans.png" style="max-width:400px;">
        </div>
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-12">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <img class="featureIcon" src="~/img/streamIcon.png" style="padding-top:40px;" alt="streaming icon">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">Join Us, Live - We broadcast Wednedsdays @@ 8:30PM EDT (UTC-5)</h4>
                            <p class="card-text">Watch the show live and join the dialog too! You can watch us LIVE on <a href="https://mixer.com/thedevtalkshow">Mixer</a>. Please say "hi", ask a question, or leave a comment on the live feed. We are on <a href="https://www.twitch.tv/thedevtalkshow">Twitch</a> and <a href="https://www.youtube.com/channel/UC2iybVI2TE2LQ6straknrnA">YouTube</a> too.  </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <img class="featureIcon" src="~/img/youtube-logo.png" style="padding-top:40px;" alt="youtube logo">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">Catch Up</h4>
                            <p class="card-text">Our <a href="https://www.youtube.com/channel/UC2iybVI2TE2LQ6straknrnA">YouTube catalog</a> contains all our shows and content.</p>
                        </div>
                    </div>
                </div>
                @*<div class="col-md-12">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <img class="" src="~/img/podcast-512.png" style="width:75px; padding-top:20px;" alt="">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">Listen On The Go</h4>
                            <p class="card-text">If video isn't your thing, we've converted each show to a podcast just for you!</p>
                        </div>
                    </div>
                </div>*@
                <div class="col-md-12">
                    <div class="card-horizontal">
                        <h5 class="card-title">Latest<br/> Episode</h5>
                        <div class="card-body">
                            <iframe src="https://www.youtube.com/embed/0FG2aLiMu88" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

